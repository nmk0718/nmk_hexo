/* media 页面样式 */
.products-container {
    width: 100%;
    overflow-x: auto;
    -webkit-overflow-scrolling: touch; /* 支持iOS滑动 */
    scrollbar-width: none; /* Firefox */
    -ms-overflow-style: none; /* IE and Edge */
}

.products-container::-webkit-scrollbar {
    display: none; /* Chrome, Safari and Opera */
}

.products {
    display: flex;
    flex-wrap: nowrap;
    padding: 10px 0;
    gap: 15px;
}

.product {
    flex: 0 0 auto;
    width: 280px;
}

.product img {
    width: 100%;
    height: auto;
    object-fit: cover;
}

.product-info {
    padding: 15px 0;
}

.product-info h3 {
    margin: 0;
    font-size: 1.1em;
    color: var(--text-color);
}

/* 滑动提示样式 */
.scroll-hint {
    text-align: center;
    color: var(--text-color);
    font-size: 0.9em;
    margin: 5px 0;
    opacity: 0.7;
}

.computer-product-content {
    display: flex;
    padding: 15px 0;
}

.computer-product-info {
    flex: 1;
    text-align: center;
    
    img {
        width: 80%;
        max-width: 300px;
    }
}

.computer-item-content {
    flex: 1;
    text-align: left;
    padding: 0 15px;
    display: flex;
    flex-direction: column;
    justify-content: center;
    
    p {
        margin: 8px 0;
        line-height: 1.6;
    }
}

/* media移动端适配 */
@media screen and (max-width: 768px) {
    .products-container {
        margin: 0 -15px;
        padding: 0 15px;
    }
    
    .product {
        width: 220px;
    }
    
    .computer-product-content {
        flex-direction: column;
        align-items: center; /* 整体内容居中 */
    }
    
    .computer-product-info {
        margin-bottom: 15px;
        
        img {
            width: 100%;
        }
    }
    
    .computer-item-content {
        padding: 0;
        text-align: left; /* 文字左对齐 */
        width: 80%; /* 控制内容区域宽度 */
        max-width: 300px; /* 限制最大宽度 */
        
        p {
            width: 100%;
            text-align: left; /* 段落文字左对齐 */
        }
    }
}

/* map页面样式 */
.map-container {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 100%;
    min-height: calc(100vh - 300px); /* 减去header和footer的高度 */
    margin: 0;
}

/* 移动端适配 */
@media screen and (max-width: 768px) {
    .map-container {
        min-height: calc(100vh - 250px);
    }
    
    .map-container iframe {
        height: 400px;
    }
}
