/* app页面样式 */
.app-list-c {
        width: 100%;
        max-width: 780px;
        margin: 0 auto;
        padding-top: 2rem;
    }

    .app-title {
        /*font-size: 20px;*/
        margin-bottom: 30px;
        font-size: 2em;
        line-height: 1.5em;
    }

    .app-list {
        display: flex;
        flex-wrap: wrap;
    }

    .app {
        display: flex;
        flex-direction: column;
        align-items: center;
        margin: 0 64px 16px 0;
        cursor: pointer;
    }

    .app img {
        width: 64px;
        height: 64px;
        margin-bottom: 16px;
    }

/* App页面通用样式 */
.post-wrap.page {
  /* App页面样式作用域 */
  .app-header,
  .header {
    display: flex
    justify-content: space-between
    background: transparent
    width: 100%
    margin: 0 auto

    .app-icon,
    .icon {
      img {
        width: 90px
        height: 90px
        border-radius: 5px
      }
    }

    .app-title-content,
    .title-c {
      flex: 1
      display: flex
      flex-direction: column
      margin: 0 0 0 20px

      .app-name {
        color: #333
        line-height: 30px
        overflow: hidden
        text-overflow: ellipsis
        white-space: nowrap
        font-size: 22px
        font-weight: normal
        margin: 0
      }

      .app-size,
      .app-package {
        font-size: 14px
        color: #999
        line-height: 20px
        margin: 3px 0 0 !important
      }
    }

    .app-qrcode,
    .qrcode {
      display: flex
      flex-direction: column
      align-items: center

      img {
        width: 82px
        height: 82px
      }

      span {
        font-size: 12px
        color: #999
      }
    }
  }

  .download-btn {
    padding: 0 6px
    display: inline-block
    width: 120px
    height: 34px
    border-radius: 5px
    font-size: 14px
    color: white
    background-color: #4caf50
    margin-top: 6px
    border: none
    cursor: pointer
  }

  .app-screenshots,
  .screen-shot {
    width: 100%
    padding: 20px
    background: transparent
    margin-top: 16px

    .sub-title {
      font-size: 18px
      margin-bottom: 10px
    }

    .app-image {
      width: 100%
      display: flex
      flex-wrap: nowrap
      overflow-x: auto
      padding: 5px
      margin-bottom: 16px

      img {
        width: 230px
        height: auto
        margin-right: 20px
        box-shadow: 2px 2px 4px 3px rgba(0, 0, 0, .1)
        cursor: pointer
        border-radius: 20px
      }
    }

    .description {
      font-size: 14px
      color: #666
      margin-bottom: 16px

      p {
        margin-bottom: 16px
      }
    }
  }
}

/* 图片预览样式 */
.preview
  position fixed
  top 0
  left 0
  width 100vw
  height 100vh
  background rgba(0, 0, 0, 0.9)
  display none
  justify-content center
  align-items center
  z-index 999
  
  .preview-img
    max-height 90vh
    max-width 90vw
    object-fit contain
  
  .prev-ic,
  .next-ic
    position absolute
    top 50%
    transform translateY(-50%)
    width 40px
    height 40px
    cursor pointer
    z-index 1000
    display flex
    justify-content center
    align-items center
    
    img
      width 24px
      height 24px
      opacity 0.6
      transition opacity 0.3s
      &:hover
        opacity 1
  
  .prev-ic
    left 20px
  
  .next-ic
    right 20px

/* 暗色主题适配 */
